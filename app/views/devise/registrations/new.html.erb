<h2 class="headmarg">Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

<%= f.input :name, :wrapper => :prepend, :label => false do %>
            <%= content_tag :span, "name", :class => "add-on" %>
            <%= f.input_field :name %>
            <% end %> 
<%= f.input :email, :wrapper => :prepend, :label => false do %>
            <%= content_tag :span, "email", :class => "add-on" %>
            <%= f.input_field :email %>
            <% end %> 

<% if f.object.password_required? %>
	<%= f.input :password, :wrapper => :prepend, :label => false do %>
            <%= content_tag :span, "password", :class => "add-on" %>
            <%= f.input_field :password %>
            <% end %> 
	<%= f.input :password_confirmation, :wrapper => :prepend, :label => false do %>
            <%= content_tag :span, "confirm password", :class => "add-on" %>
            <%= f.input_field :password_confirmation %>
            <% end %> 
<% end %>

  <div class="form-actions">
  	<%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="slinks">
<%= render "devise/shared/links" %>
</div>